---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="paradoxyz.space">
  <div class="index-content framed">
    <h1 id="hello-there">Hello there!</h1>
    <p>Welcome to paradoxyz.space!</p>
    <p>
      You can customise the colour scheme using panr's <a href="https://panr.github.io/terminal-css/"><strong>Terminal.css</strong></a> 
      generator - all generated schemes are fully compatible with this theme.
    </p>
    <figure>
     <img src="/img/home.png" alt="Celeste Summit Ending">
        <figcaption>
          <p>Celeste uwu</p>
        </figcaption>
    </figure>
  </div>
  
  <div class="posts">
    {posts.map((post) => <PostCard post={post} />)}
  </div>
</BaseLayout>